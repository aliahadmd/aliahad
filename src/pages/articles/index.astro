---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const articles = await getCollection('articles');
---

<Layout title="Articles - Ahad Ali">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Articles</h1>
    <div class="space-y-8">
      {articles.map(article => (
        <article class="border-b dark:border-neutral-700 pb-8">
          <h2 class="text-2xl font-bold mb-2">
            <a href={`/articles/${article.slug}`} class="hover:text-blue-500">
              {article.data.title}
            </a>
          </h2>
          <p class="text-gray-600 dark:text-neutral-400 mb-4">
            {article.data.description}
          </p>
          <time class="text-sm text-gray-500">
            {new Date(article.data.publishDate).toLocaleDateString()}
          </time>
        </article>
      ))}
    </div>
  </div>
</Layout>