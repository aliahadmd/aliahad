---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Projects - Ahad Ali">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Projects</h1>
    <div class="grid gap-6 md:grid-cols-2">
      {projects.map(project => (
        <article class="border dark:border-neutral-700 rounded-lg p-6">
          <h2 class="text-xl font-bold mb-2">
            <a href={`/projects/${project.slug}`} class="hover:text-blue-500">
              {project.data.title}
            </a>
          </h2>
          <p class="text-gray-600 dark:text-neutral-400 mb-4">
            {project.data.description}
          </p>
          <div class="flex flex-wrap gap-2">
            {project.data.techs.map(tech => (
              <span class="px-2 py-1 bg-gray-100 dark:bg-neutral-800 rounded text-sm">
                {tech}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>